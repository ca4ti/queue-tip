<div style="font: normal 14px auto "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;">Editing agent</div>
<br />
<%= form_for(@agent) do |f| %>
  <% if @agent.errors.any? %>
    <% @agent.errors.full_messages.each { |m| %><li><%=m%></li><% } %>
  <% end %>

  <p>
    <%= f.label :channel %><br />
    <%= f.text_field :channel %>
  </p>
  <p>
    <%= f.label :first %><br />
    <%= f.text_field :first %>
  </p>
  <p>
    <%= f.label :last %><br />
    <%= f.text_field :last %>
  </p>
  <p>
    <%= f.label :exten %><br />
    <%= f.text_field :exten %>
  </p>
  <p>
  <%= f.label "Group" %><br />
  <%= select("group", "name", Group.all.collect { |g| [g.name] } << ["None"]) %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @agent %> |
<%= link_to 'Back', agents_path %>
