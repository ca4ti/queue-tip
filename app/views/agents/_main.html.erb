<div style="font: normal 14px auto "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;"> Agents</div>
<br />
<table align="center" width="100%">
  <tr>
    <th>Channel</th>
    <th>First</th>
    <th>Last</th>
    <th>Exten</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% for agent in @agents %>
  <tr>
    <td><%=h agent.channel %></td>
    <td><%=h agent.first %></td>
    <td><%=h agent.last %></td>
    <td><%=h agent.exten %></td>
    <td><%=h agent.group.name if agent.group %></td>
    <td><%= link_to 'Show', agent %></td>
    <td><%= link_to 'Edit', edit_agent_path(agent) %></td>
    <td><%= link_to 'Destroy', agent, data: { confirm: 'Are you sure?' }, method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
