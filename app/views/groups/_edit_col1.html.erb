<div style="font: normal 14px auto "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;">Editing Group <%=h @group.name.to_s %></div>
<br />

<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <% @group.errors.full_messages.each { |m| %><li><%=m%></li><% } %>
  <% end %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @group %> |
<%= link_to 'Back', groups_path %>
